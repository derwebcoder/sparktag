---
import "../styles/global.css";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="bg-slate-100 h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="robots" content="noindex" />
    <meta name="description" content="Sparktag note taking" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/sparktag/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="hidden h-full">
    <slot />
  </body>
</html>

<script>
  import { isAuthenticated } from "../scripts/auth/secret";

  const authUrl = import.meta.env.BASE_URL + "auth/";
  if (
    window.location.pathname.startsWith(authUrl) ||
    (await isAuthenticated())
  ) {
    document.body.classList.remove("hidden");
  } else {
    window.location.href = authUrl;
  }
</script>
<script>
  import "preline/dist/preline.js";
</script>
